Config { font = "xft:ProFont:size=12",
  borderColor = "black",
  border = TopB,
  bgColor = "black",
  fgColor = "grey",
  position = TopW L 100,
  commands = [ Run Network "wlan0" ["-t","<dev>: <rx> KB, <tx> KB"] 10
                 , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                 , Run Memory ["-t","Mem: <usedratio>%"] 10
                 , Run Swap [] 10
                 , Run Date "%a %b %_d %H:%M" "date" 600
                 , Run StdinReader
               ],
  sepChar = "%",
  alignSep = "}{",
  template = "%StdinReader% | %cpu% | %memory% * %swap% | %wlan0% }\
                \{ <fc=#ee9a00>%date%</fc>"
}


